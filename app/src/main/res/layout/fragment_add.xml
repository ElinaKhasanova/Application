<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.SignupActivity"
    android:orientation="vertical"
    android:padding="@dimen/fui_auth_method_button_drawablePadding">

    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/add_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add photo"/>

    <EditText
        android:id="@+id/type_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"/>

    <EditText
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:id="@+id/number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"/>

    <EditText
        android:id="@+id/prodectionYear_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prodection Year"/>

    <EditText
        android:id="@+id/location_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"/>

    <EditText
        android:id="@+id/nameResponsible_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Responsible"/>

    <Button
        android:id="@+id/create_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/btn_login_register"
        android:text="Create"
        android:textColor="@color/white" />
</LinearLayout>